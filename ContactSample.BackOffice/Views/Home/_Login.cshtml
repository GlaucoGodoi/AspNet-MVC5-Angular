<div class="well col-md-6 clearfix">
    <h3>Login</h3>
    <form novalidate>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="text" class="form-control" ng-model="vm.data.username" id="exampleInputEmail1" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" ng-model="vm.data.password" id="exampleInputPassword1" placeholder="Password">
        </div>
        <button type="button" class="btn btn-success col-xs-4" ng-click="vm.actions.checkCredentials()">Validate</button>
    </form>
    <a class="btn btn-info pull-right col-xs-4" href="#register">Register new user</a>
</div>
<div class="clearfix"></div>